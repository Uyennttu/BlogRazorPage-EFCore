@page
@model BlogRazorPage.Pages.Blogs.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Blog</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Blog.Title" class="control-label"></label>
                <input asp-for="Blog.Title" class="form-control" />
                <span asp-validation-for="Blog.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Blog.Content" class="control-label"></label>
                <input asp-for="Blog.Content" class="form-control" />
                <span asp-validation-for="Blog.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Blog.CreatedDate" class="control-label"></label>
                <input asp-for="Blog.CreatedDate" class="form-control" />
                <span asp-validation-for="Blog.CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Blog.AuthorId" class="control-label"></label>
                <select asp-for="Blog.AuthorId" class="form-control" asp-items="@(new SelectList(Model.Authors, "Id", "Name"))">
                    <option value="">Select Author</option>
                </select>

                <span asp-validation-for="Blog.AuthorId" class="text-danger"></span>

            </div>

            <button type="submit" class="btn btn-primary">Create Blog</button>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
